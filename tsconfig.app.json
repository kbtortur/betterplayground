{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "environment.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "auto-imports.d.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "lib": ["ES2022", "DOM"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
